---
import { Image } from "astro:assets";

---
<div class="card-container">
	<Image 
		src="/images/carrito.jpg"
		alt="carritouno"
		class="cardImages"
		width={370}
		height={300}
	/>
	<div class="tag-container">
		<span class="tag">Usado</span>
		<span class="tag">revisado</span>
		<span class="tag">tarjeta</span>
	</div>
</div>
	</div>

<style>
    	.card-container {
		max-height: 70vh;
		background-color: #FFFFFF;
		padding: 8px;
		border: 1px solid #C3CACD;
		border-radius: 15px;
	}
	
 	.cardImages {
		object-fit: fill;
		border-radius: 10px;
 }
	.tag-container {
		display: flex;
		gap: 7px;
		margin: 10px;
	}

	.tag {
		border: 1px solid #E9E9E9;
		color: #787E86;
		border-radius: 50px;
		padding: 6px;
	}
	

</style>